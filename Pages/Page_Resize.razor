@page "/"

<Div class="containerResize">
    
    <Div class="containerImagen">
        @if (ValueDefault._base64 == null)
        {
            <Image Source="@ValueDefault._imageDefault" />
        }
        else 
        {
            <Image Source="@ValueDefault._base64" />
        }
          
    </Div>

    <Div class="containerInput">
            <Label>Width</Label>
            <NumericEdit @bind-Value="@ValueDefault._width" />
            <Label>Height</Label>
            <NumericEdit @bind-Value="@ValueDefault._height" />
    </Div>


    <Div Class="containerFileResize">
        <FileEdit Changed="@HandleFileSelected" accept="image/png, image/jpeg" />
    </Div>

    <Div class="containerControl">   
        <Button Class="BtnResize" @onclick="() => ResizeImage(ValueDefault._width, ValueDefault._height)" Disabled="@(ValueDefault._btnResize == false ? false : true)">Resize</Button>
        <Button Class="BtnSave" @onclick="SaveImage" Disabled="@(ValueDefault._btnDownLoad == true ? true : false)">Download</Button>
        <Button Class="BtnReset" @onclick="ValueDefault.ResetValues">Reset</Button>
    </Div>

</Div>
